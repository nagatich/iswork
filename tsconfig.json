{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./pages",
    "importsNotUsedAsValues": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "paths": {
    "~/*": [
      "pages/"
    ]
  },
  "include": [
    "pages/**/*ts",
    "pages/**/*tsx",
    "pages/**/*.d.ts",
    "pages/next-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
